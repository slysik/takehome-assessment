# Multi-Agent Earnings Analyzer - Environment Configuration
# Copy this file to .env and update with your values

# ============================================
# LLM Configuration (Required for Production)
# ============================================
# Use Anthropic Claude for production
ANTHROPIC_API_KEY=sk-ant-your-actual-api-key-here

# Optional: OpenAI API key (not used by default, but reserved)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# ============================================
# Application Configuration
# ============================================
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
RELOAD=false

# ============================================
# LLM Model Configuration
# ============================================
# Model selection (claude-sonnet-4-5 recommended)
LLM_MODEL=claude-sonnet-4-5-20250929
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=1024

# ============================================
# Agent Configuration
# ============================================
# Retry logic for agent failures
MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=30

# Cache extracted data between requests
ENABLE_CACHING=false

# ============================================
# Resource Limits
# ============================================
# Maximum number of agents to run concurrently
MAX_CONCURRENT_AGENTS=4

# Maximum earnings report size (in MB)
MAX_DOCUMENT_SIZE_MB=10

# ============================================
# Monitoring & Metrics (Optional)
# ============================================
# Enable Prometheus metrics collection
ENABLE_METRICS=false
METRICS_PORT=9090

# ============================================
# Development vs Production
# ============================================
# Set to 'development' for mock LLM, 'production' for real API
ENVIRONMENT=production
