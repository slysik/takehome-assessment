# Environment Configuration
# Copy this file to .env and update with your values

# API Keys (choose one or mock for testing)

# OpenAI API Key
OPENAI_API_KEY=
# Anthropic Configuration to run Claude Code in programmatic mode
ANTHROPIC_API_KEY=
# HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# LLM Configuration
LLM_PROVIDER=openai  # Options: openai, anthropic, huggingface, mock
LLM_MODEL=gpt-3.5-turbo  # or claude-3, llama2, etc.
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Application Configuration
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
RELOAD=false

# Agent Configuration
MAX_RETRIES=3
AGENT_TIMEOUT_SECONDS=30
ENABLE_CACHING=true

# Resource Limits
MAX_CONCURRENT_AGENTS=4
MAX_DOCUMENT_SIZE_MB=10

# Monitoring (optional)
ENABLE_METRICS=false
METRICS_PORT=9090

# Steve added these for claude code usage and git integration 

# Claude Code Path - if 'claude' does not work run 'which claude' and paste that value here
CLAUDE_CODE_PATH=/opt/homebrew/bin/claude

PORT=8001  # webhook server port

# Returns claude code to the root directory after every command
CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR=true

# Agent Cloud Sandbox Environment
E2B_API_KEY=

# If you use cloudflare's tunnel to expose `adws/trigger_webhook.py` to github (public internet)
CLOUDFLARED_TUNNEL_TOKEN=
# (Optional) Cloudflare R2 Configuration for uploading review screenshots
# If configured, review screenshots will be uploaded to R2 and displayed as images in GitHub comments
# If not configured, local file paths will be shown instead
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_R2_ACCESS_KEY_ID=
CLOUDFLARE_R2_SECRET_ACCESS_KEY=
CLOUDFLARE_R2_BUCKET_NAME=
CLOUDFLARE_R2_PUBLIC_DOMAIN=
